{
  "dashboard": {
    "title": "SHIM - Cost Optimization Dashboard",
    "description": "Real-time monitoring of SHIM intelligent model routing and cost savings",
    "tags": ["shim", "cost-optimization", "ai"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Cost Savings (Monthly)",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(shim_cost_savings_total)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "currencyUSD"
        }
      },
      {
        "id": 2,
        "title": "Savings Percentage",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "100 * (sum(shim_cost_savings_total) / sum(shim_cost_total_without_routing))",
            "refId": "A"
          }
        ],
        "options": {
          "min": 0,
          "max": 100,
          "unit": "percent"
        }
      },
      {
        "id": 3,
        "title": "Queries by Model",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "sum by(model) (shim_queries_total)",
            "refId": "A",
            "legendFormat": "{{model}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Cost Per Query (by Model)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(shim_cost_by_model[5m])",
            "refId": "A",
            "legendFormat": "{{model}}"
          }
        ],
        "options": {
          "legend": { "displayMode": "table", "placement": "right" }
        }
      },
      {
        "id": 5,
        "title": "Cumulative Savings Over Time",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "sum(shim_cost_savings_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 6,
        "title": "Routing Performance",
        "type": "table",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "topk(10, shim_routing_confidence_avg)",
            "refId": "A",
            "format": "table"
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": { "from": "now-6h", "to": "now" },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m"]
    }
  }
}
