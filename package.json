{
  "name": "shim",
  "version": "0.2.0",
  "description": "Session Handling & Intelligent Management for Claude Desktop",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shim": "./bin/shim-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:mcp": "tsc -p src/mcp/tsconfig.json",
    "watch": "tsc --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "mcp:start": "node dist/mcp/server.js",
    "db:migrate": "node dist/database/migrate.js",
    "metrics:start": "node dist/analytics/metrics-server.js",
    "evolve": "npm run build && node dist/activate.js",
    "evolve:src": "npm run build && node dist/activate.js ./src",
    "evolve:safe": "npm run build && node dist/activate.js",
    "evolve:auto": "npm run build && node dist/activate.js --auto"
  },
  "keywords": [
    "claude",
    "ai",
    "crash-prevention",
    "checkpoint",
    "mcp",
    "development-tools",
    "analytics",
    "auto-experimentation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "bullmq": "^5.66.4",
    "ioredis": "^5.9.1",
    "prom-client": "^15.1.0",
    "simple-statistics": "^7.8.3",
    "sqlite3": "^5.1.7",
    "statsig-node": "^5.24.0",
    "tiktoken": "^1.0.15",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.28",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
