{
  "name": "shim-mcp",
  "version": "1.0.0",
  "description": "SHIM MCP Server - Claude+ Infrastructure Layer",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx esbuild@latest src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --sourcemap --external:@modelcontextprotocol/sdk --external:zod --packages=external",
    "dev": "npx esbuild@latest src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --sourcemap --external:@modelcontextprotocol/sdk --external:zod --packages=external --watch",
    "start": "node dist/index.js",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.19.5",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.24.2",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
